<div class="container">
  <% for s in @sitesindex %>
    <div class="row">
      <div class="col-md-12">
        <div class="card flex-md-row mb-4 box-shadow h-md-300" >
          <img style="max-width: 550px; max-height: 350px;" src="<%= s.image %>">
          <div class="card-body">
            <h3 class="card-title"><%= s.name.truncate(30) %></h3>
            <div class="text-muted"><%= s.location %></div>
            <div><%= link_to "See details", site_path(s) %></div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>